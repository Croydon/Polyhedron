{
    "configurations": [
        {
            "name": "Linux - Debug",
            "intelliSenseMode": "clang-x64",
            "includePath": [
                "${workspaceFolder}",
                "${workspaceFolder}/src",
                "${workspaceFolder}/src/shared",
                "${workspaceFolder}/src/game",
                "${workspaceFolder}/src/engine",
                "${workspaceFolder}/src/tools"
            ],
            "defines": [
                "DEBUG"
            ],
            "forcedInclude": [
                "${workspaceFolder}/include/core.h"
            ],
            "compilerPath": "/usr/bin/clang",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "compileCommands": "${workspaceFolder}/build/compile_commands.json",
            "browse": {
                "path": [
                    "${workspaceFolder}"
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": ""
            },
            "configurationProvider": "vector-of-bool.cmake-tools"
        },
        {
            "name": "OSX",
            "includePath": [
                "${workspaceFolder}/**",
                "./**"
            ],
            "defines": [
                "GL_SILENCE_DEPRECATION=1"
            ],
            "compilerPath": "/usr/bin/clang",
            "cStandard": "c11",
            "cppStandard": "c++11",
            "intelliSenseMode": "clang-x64",
            "compileCommands": "${workspaceFolder}/build/compile_commands.json",
            "configurationProvider": "vector-of-bool.cmake-tools"
        },
        {
            "name": "**/{$workspaceFolder}/**",
            "includePath": [
                "${workspaceFolder}/**"
            ],
            "defines": [],
            "compilerPath": "/usr/bin/gcc",
            "intelliSenseMode": "clang-x64"
        },
        {
            "name": "Linux - x64 - Debug",
            "includePath": [
                "${workspaceFolder}/**"
            ],
            "defines": [],
            "compilerPath": "/usr/bin/gcc",
            "intelliSenseMode": "clang-x64"
        }
    ],
    "version": 4
}